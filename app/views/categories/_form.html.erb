<%# form for creating or editing categories %>
<div class="container-fluid">
  <%= form_with(model: @category, local: true) do |f| %>
    <div class="row justify-content-md-center pt-2">
      <%# markup the form container %>
      <div class="col-4 border rounded border-secondary" id="window">
        <div class="row justify-content-md-center py-4">
          <div class="col-10 text-white pb-4">
          <%# field for a category name %>
            <div class="form-group">
              <%= f.text_field :name, class: "form-control border border-secondary text-white", id: "window", placeholder: "Category name" %>
            </div>
          </div>
          <div class="row justify-content-md-center">
            <%# button for creating or updating a new category %>
            <%= f.submit(@category.new_record? ? "Create" : "Update", class: "btn btn-secondary mr-2") %>
            <%# return on the previous page action for Cancel button %>
            <%= link_to "Cancel", :back, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>