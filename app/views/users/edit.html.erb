<%# page for editing user profile %>
<h1 class="text-center pt-4 text-white">Edit your profile</h1>
<%= render 'shared/errors', obj: @user %> %>
<%= render 'form' %>

<%# deleting a user account with confirmation %>
<div class="container-fluid fixed-bottom pb-5">
  <div class="row justify-content-md-center pb-5">
    <%= link_to 'Delete Account', user_path(@user), method: :delete, class: "btn btn-outline-danger",
    data: { confirm: "Are you sure you want to delete the user account and all associated articles?" } %>
  </div>
</div>