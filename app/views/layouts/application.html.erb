<!DOCTYPE html>
<html>
  <head>
    <title>JustBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column min-vh-100">
    <%# show navigation bar at the top of the pages %>
    <%= render 'layouts/navigation' %>
    <%# show messages, if they are %>
    <%= render 'layouts/messages' %>
    <%# show content of a certain page %>
    <%= yield %>
    <%# show footer at the bottom of the pages %>
    <%= render 'layouts/footer' %>

    <%# include JQuery %>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>

    <%# script for Bootstrap navbar items active state switching %>
    <script>
      $(document).ready(function() {
        $('li.active').removeClass('active');
        $('a[href="' + location.pathname + '"]').closest('li').addClass('active'); 
      });
    </script>
  </body>
</html>
